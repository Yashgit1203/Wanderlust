<%- layout("/layouts/boilerplate.ejs") %>
<div class="row">
    <div class="col-8 offset-2 edit-card">
        <h2 class="mt-3 mb-4">My Wishlist</h2>

<% for(wishlist of allwishlist) {%>
<a href="/listings/<%= wishlist.listing._id %>" class="link-styles">
    <div class="card mb-3" style="max-width: 840px; max-height: 150px; overflow: hidden;" >
        <div class="row g-0">
          <div class="col-md-4">
            <img src="<%= wishlist.listing.image.url %>" class="img-fluid rounded-start show-wishimg" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body p-3">
              <h5 class="card-title"><%= wishlist.listing.title %></h5>
              <p class="card-text"><%= wishlist.listing.description %></p>
              <p class="card-text"><small class="text-body-secondary"> &#8377; <%= wishlist.listing.price.toLocaleString("en-IN") %></small></p>
            </div>
          </div>
        </div>
      </div>
</a>

<% } %>
    </div>
    
</div>