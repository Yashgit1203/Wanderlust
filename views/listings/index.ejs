    <div class="row row row-cols-lg-3 row-cols-md-2 row-cols-sm-1" >
        <% for(listing of alllistings) {%>
           <a href="/listings/<%= listing._id %>" class="link-styles">
            <div class="card col listing-card" >
                <img src="<%= listing.image.url %>" class="card-img-top" style="height: 20rem;" alt="...">
                <div class="card-img-overlay"></div> <!--Overlays-->
                <div class="card-body">
                  <p class="card-text">
                    <b><%= listing.title %></b> <br>  
                    &#8377; <span class="card-price"><%= listing.price.toLocaleString("en-IN") %></span><span> / night</span>
                    
                  </p>

                  
                </div>
              </div>
           </a>
              <% } %>
